<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="TickTock" style="-fx-font-size: 24px;"/>
    <TextField fx:id="moduleField" promptText="Enter module name"/>
    <Button fx:id="startButton" text="Start Session"/>
    <Button fx:id="stopButton" text="Stop Session" disable="true"/>
    <ListView fx:id="sessionList"/>
</VBox>
